{% extends "::base.html.twig" %}
{% block main %}
<h3 style="text-align: center;">Formulaire de source</h3>
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  {# Les erreurs générales du formulaire. #}
  {{ form_errors(form) }}

  {# NOM #}
  <div class="form-group">
    {{ form_label(form.nom, "Nom du site", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.nom) }}

    <div class="col-sm-10">
      {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

  {# URL #}
  <div class="form-group">
    {{ form_label(form.url, "URL", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.url) }}

    <div class="col-sm-10">
      {{ form_widget(form.url, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

  {# CV PDF #}
  <div class="form-group">
    {{ form_label(form.cv_document, "CV pdf uploadé", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.cv_document) }}
    <div class="col-sm-10">
      {{ form_widget(form.cv_document, {'attr': {'class': 'form-control', 'COLS': '10', 'rows': '10'}}) }}
    </div>
  </div>

  {# CV PDF #}
  <div class="form-group">
    {{ form_label(form.cv_formulaire, "CV renseigné avec formulaire", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.cv_formulaire) }}
    <div class="col-sm-10">
      {{ form_widget(form.cv_formulaire, {'attr': {'class': 'form-control', 'COLS': '10', 'rows': '10'}}) }}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12">
      {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary center-block'}}) }}
    </div>
  </div>

  {# Génération automatique des champs pas encore écrits.
     Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
     et tous les champs cachés (type « hidden »). #}
  {{ form_rest(form) }}

  {# Fermeture de la balise <form> du formulaire HTML #}
  {{ form_end(form) }}

{% endblock %}
