{% extends "::base.html.twig" %}
{% block main %}
<div class="well">
    <h3>Liste d'offres</h3>
    <table class="mydatatable table table-striped">
	<thead>
    <tr><th>id</th><th>Titre</th><th>Publication</th><th>Der. contact</th><th>Statut</th><th>MÃ©tier</th><th><a href="{{path('tools_looking_for_job_addoffre')}}" title="Ajouter"><span class="glyphicon glyphicon-plus"></span></a></th></tr>
